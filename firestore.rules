rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper: check if the caller is an admin or superadmin
    function isAdmin() {
      return request.auth != null &&
        getUserData().role in ['admin', 'superadmin'];
    }

    // Helper: check if the caller is a superadmin
    function isSuperAdmin() {
      return request.auth != null &&
        getUserData().role == 'superadmin';
    }

    // Helper: check if the caller is an admin for a specific school
    function isSchoolAdmin(schoolId) {
      return request.auth != null &&
        getUserData().role in ['admin', 'superadmin'] &&
        (getUserData().role == 'superadmin' || getUserData().schoolId == schoolId);
    }

    // School info — only school admins can read/update their own school
    match /schools/{schoolId} {
      allow read: if isSchoolAdmin(schoolId);
      allow create: if request.auth != null;
      allow update: if isSchoolAdmin(schoolId);
      allow delete: if false;
    }

    // Elections
    match /elections/{electionId} {
      // Public read: voters need election info on ballot page
      allow read: if true;
      // Only school admins can create/update their school's elections
      allow create: if isAdmin() && request.resource.data.schoolId is string;
      allow update: if isSchoolAdmin(resource.data.schoolId);
      allow delete: if false;
    }

    // Votes (top-level collection)
    // All vote creation happens via Cloud Functions (admin SDK bypasses rules)
    match /votes/{voteId} {
      allow create: if false;
      allow read: if resource.data.schoolId is string
        ? isSchoolAdmin(resource.data.schoolId)
        : isAdmin();
      allow update: if false;
      // Only superadmin can delete votes (data purge after finalization)
      allow delete: if isSuperAdmin();
    }

    // Voter codes (top-level collection)
    // Code lookup and creation happens via Cloud Functions
    match /voterCodes/{codeId} {
      allow read: if resource.data.schoolId is string
        ? isSchoolAdmin(resource.data.schoolId)
        : isAdmin();
      // Only Cloud Functions create codes (admin SDK bypasses rules)
      allow create: if false;
      allow update: if false;
      // Only superadmin can delete codes (data purge after finalization)
      allow delete: if isSuperAdmin();
    }

    // Hash chain (top-level collection)
    // All hash chain creation happens via Cloud Functions
    match /hashChain/{blockId} {
      allow read: if resource.data.schoolId is string
        ? isSchoolAdmin(resource.data.schoolId)
        : isAdmin();
      allow create: if false;
      allow update, delete: if false;
    }

    // Users
    match /users/{userId} {
      // Any authenticated user can read (needed for auth context)
      allow read: if request.auth != null;
      // Users can only create their own profile (never as superadmin — use claimSuperAdmin Cloud Function)
      allow create: if request.auth != null && request.auth.uid == userId
        && request.resource.data.role != 'superadmin';
      // Users can update their own profile EXCEPT protected fields
      // Admins can update any user
      allow update: if isAdmin() ||
        (request.auth != null && request.auth.uid == userId &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'approved', 'approvedAt', 'approvedBy', 'schoolId']));
      // Only superadmin can delete users
      allow delete: if isSuperAdmin();
    }

    // Audit logs — only Cloud Functions create these
    match /auditLogs/{logId} {
      allow read: if resource.data.schoolId is string
        ? isSchoolAdmin(resource.data.schoolId)
        : isAdmin();
      allow create: if false;
      allow update, delete: if false;
    }
  }
}
