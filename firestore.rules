rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // School info
    match /schools/{schoolId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // Elections
    match /elections/{electionId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow admin full update; allow unauthenticated voters to update only vote counters
      allow update: if request.auth != null
        || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalVoted', 'hashChainHead', 'updatedAt']);
      allow delete: if false;
    }

    // Votes (top-level collection)
    match /votes/{voteId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }

    // Voter codes (top-level collection)
    match /voterCodes/{codeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if true;
      allow delete: if false;
    }

    // Hash chain (top-level collection)
    match /hashChain/{blockId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }

    // Users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Audit logs
    match /auditLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if false;
    }
  }
}
